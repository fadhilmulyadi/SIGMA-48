<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainDashboardPane" prefHeight="768.0" prefWidth="1366.0" styleClass="dashboard-pane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.sigma48.ui.controller.MainDashboardController">
   <top>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="header-box">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label fx:id="welcomeLabel" styleClass="welcome-text" text="Selamat Datang, [Username]! Role: [Role]" />
            <Button fx:id="logoutButton" onAction="#handleLogoutButtonAction" styleClass="logout-button" text="Logout" />
         </children>
      </HBox>
   </top>
   <left>
      <VBox fx:id="navigationMenuBox" spacing="10.0" styleClass="navigation-menu" prefWidth="200.0">
         <padding>
            <Insets top="20.0" left="10.0" right="10.0" bottom="20.0"/>
         </padding>
         <Label text="MENU UTAMA" styleClass="menu-title"/>
      </VBox>
   </left>
   <center>
      <StackPane fx:id="contentAreaPane" styleClass="content-area">
         <Label text="Selamat datang di SIGMA-48. Pilih menu di samping." styleClass="placeholder-text"/>
      </StackPane>
   </center>
</BorderPane>