<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sigma48.ui.controller.MissionListViewController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="view-header">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="DAFTAR SEMUA MISI" styleClass="view-title" />
            <Button fx:id="refreshButton" onAction="#handleRefreshButton" text="Refresh" styleClass="action-button" />
            </children>
      </HBox>
   </top>
   <center>
      <TableView fx:id="missionTableView" styleClass="table-view-missions">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="150.0" text="ID Misi" />
          <TableColumn fx:id="judulColumn" prefWidth="250.0" text="Judul Misi" />
          <TableColumn fx:id="tujuanColumn" prefWidth="300.0" text="Tujuan" />
          <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
          <TableColumn fx:id="targetColumn" prefWidth="200.0" text="Target Utama" />
          </columns>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </TableView>
   </center>
</BorderPane>